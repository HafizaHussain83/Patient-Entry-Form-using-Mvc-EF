@model ProductDto
@{
    ViewData["Title"] = "Delete Patient";
}

<div class="row">
    <div class="col-md-6 mx-auto rounded border p-3">
        <h2 class="text-center mb-4">Delete Patient Record</h2>

        <div class="alert alert-warning">
            <h5>Are you sure you want to delete this patient record?</h5>
        </div>

        <div class="mb-3">
            <label class="fw-bold">Name:</label>
            <div>@Model.name</div>
        </div>

        <div class="mb-3">
            <label class="fw-bold">Phone Number:</label>
            <div>@Model.phone_number</div>
        </div>

        <div class="mb-3">
            <label class="fw-bold">Entry Date:</label>
            <div>@Model.entry_date?.ToShortDateString()</div>
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            @Html.AntiForgeryToken()

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
